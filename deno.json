{
  "$schema": "./deno.schema.json",
  "name": "@ptm/mm-mark",
  "version": "0.2.16",
  "exports": "./jsr/mod.ts",
  "imports": {
    "showdown": "npm:showdown",
    "@types/showdown": "npm:@types/showdown",
    "js-yaml": "npm:js-yaml",
    "@types/js-yaml": "npm:@types/js-yaml"
  },
  "publish": {
    "include": ["LICENSE", "README.md", "jsr.json", "jsr/**/*.ts", "deno.json"]
  },
  "compilerOptions": {
    "noImplicitAny": true
  },
  "lint": {
    "include": ["jsr/"]
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["jsr/"]
  },
  "lock": false
}
