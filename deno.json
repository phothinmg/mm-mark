{
  "$schema": "./deno.schema.json",
  "name": "@ptm/mm-mark",
  "version": "0.2.22",
  "exports": {
    ".": "./src/index.ts",
    "./frontmatter": "./src/frontmatter/index.ts",
    "./extensions": "./src/extensions/index.ts"
  },
  "imports": {
    "showdown": "npm:showdown@^2.0.6",
    "@types/showdown": "npm:@types/showdown",
    "js-yaml": "npm:js-yaml@^4.0.9",
    "@types/js-yaml": "npm:@types/js-yaml"
  },
  "publish": {
    "include": ["LICENSE", "README.md", "src/**/*.ts", "deno.json"]
  },
  "compilerOptions": {
    "noImplicitAny": true
  },
  "lint": {
    "include": ["src/"]
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "lock": false
}
